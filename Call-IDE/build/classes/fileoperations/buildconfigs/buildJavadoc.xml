<?xml version="1.0" encoding="UTF-8" standalone="no"?><project default="main" name="Ant-Test">
        <!-- Sets variables which can later be used. -->
        <!-- The value of a property is accessed via ${} -->
        <property location="/Users/ATTJ/Desktop/code/joe" name="src.dir"/>
        <property location="/Users/ATTJ/Desktop/code/docs" name="docs.dir"/>

        <!-- Deletes the existing build, docs and dist directory-->
        <target name="clean">
                <delete dir="${docs.dir}"/>
        </target>

        <!-- Creates the  build, docs and dist directory-->
        <target name="makedir">
                <mkdir dir="${docs.dir}"/>
        </target>

        <!-- Creates Javadoc -->
        <target name="docs">
                <javadoc destdir="${docs.dir}" packagenames="${src.dir}" sourcepath="${src.dir}">
                        <!-- Define which files / directory should get included, we include all -->
                         <fileset dir="${src.dir}">
                <include name="**"/>
                 </fileset>
                </javadoc>
        </target>

        <target depends="docs" name="main">
                <description>Main target</description>
        </target>

</project>