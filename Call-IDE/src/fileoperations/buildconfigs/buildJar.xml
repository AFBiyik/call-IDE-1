<?xml version="1.0" encoding="UTF-8" standalone="no"?><project default="main" name="Ant-Test">
        <!-- Sets variables which can later be used. -->
        <!-- The value of a property is accessed via ${} -->
        <property location="/Users/ATTJ/Desktop/code/classes" name="build.dir"/>
        <property location="/Users/ATTJ/Desktop/code/dist" name="dist.dir"/>

        <!-- Deletes the existing build, docs and dist directory-->
        <target name="clean">
                <delete dir="${dist.dir}"/>
        </target>

        <!-- Creates the  build, docs and dist directory-->
        <target name="makedir">
                <mkdir dir="${dist.dir}"/>
        </target>

        <!--Creates the deployable jar file  -->
        <target name="jar">
                <jar basedir="${build.dir}" destfile="${dist.dir}\test.ant.jar">
                        <manifest>
                                <attribute name="Main-Class" value="myP.hello"/>
                        </manifest>
                </jar>
        </target>

        <target depends="jar" name="main">
                <description>Main target</description>
        </target>

</project>